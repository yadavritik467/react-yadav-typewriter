{
    "compilerOptions": {
        "target": "ES5",
        "module": "ESNext",
        "jsx": "react",
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}